@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common;
@using demoDBconnection.Models;
@model X.PagedList.IPagedList<TDanhMucSp>;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "DanhSachSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@{
    var tableColor = "table-info";
    var i = 0;
}

<h1>DanhSachSanPham</h1>
<h2 class="text-danger">@TempData["Message"]</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên sản phẩm
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model[0].CanNang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].DoNoi)
            </th>
       
            <th>
                @Html.DisplayNameFor(model => model[0].ThoiGianBaoHanh)
            </th>
           
          
            <th>
                @Html.DisplayNameFor(model => model[0].GiaNhoNhat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].GiaLonNhat)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            if (i%2==0)
            {
                tableColor = "table-warning";
            }
            else
            {
                tableColor = "table-info";   
            }
            i++;
            <tr class="@tableColor">
            <td>
                @Html.DisplayFor(modelItem => item.TenSp)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.CanNang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoNoi)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.ThoiGianBaoHanh)
            </td>
          
        
            <td>
                @Html.DisplayFor(modelItem => item.GiaNhoNhat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaLonNhat)
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaSp">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaSp">Details</a> |
                <a asp-action="xoasanpham" asp-route-masanpham="@item.MaSp">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@Html.PagedListPager(Model,page => Url.Action("DanhSachSanPham",new{page=page}),new PagedListRenderOptions()
{
   LiElementClasses = new List<string> {"page-item"},
   PageClasses = new List<string>{"page-link"}
})
